@model AuthorizationWithIdentity.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

@if (ViewBag.status=="success")
{
    <div class="alert aler-info">Şifreniz başarıyla yenilenmiştir. Giriş sayfasında yeni şifre ile giriş yapabilirsiniz.</div>
    <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giriş için tıklayınız.</a>
}
else
{
   <div class="row">
    <div class="col-md-4 ofsset-md-4">
        <h4>Yeni şifreniz</h4>
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni Şifre" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div> 
}





